<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="@drawable/ui_task_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_infotext"
            android:text="Please select if you want to upload an image from your camera roll or to take a image live in the app."
            android:textStyle="bold"
            android:textSize="20sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_infotext"
            android:layout_marginTop="12dp"
            android:text="Take a snap now!"
            android:textSize="20sp"
            android:id="@+id/dialog_now"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_now"
            android:layout_marginTop="12dp"
            android:text="Select image from gallery"
            android:textSize="16sp"
            android:id="@+id/dialog_roll"/>


    </RelativeLayout>


</LinearLayout>