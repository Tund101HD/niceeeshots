<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:padding="15dp"
    android:background="@drawable/ui_task_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ui_login_title"
        android:layout_centerHorizontal="true"
        android:text="Login to NiceeShotss"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ui_login_usernametitle"
        android:layout_centerHorizontal="true"
        android:text="Email"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ui_login_title"
        />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/ui_login_usernameinput"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ui_login_usernametitle"
        android:hint="Please enter your email"
        android:inputType="text"
        android:textStyle="italic"
        android:textSize="24sp"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:background="@drawable/ui_register_border"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ui_login_fullnametitle"
        android:layout_centerHorizontal="true"
        android:text="Password"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ui_login_usernameinput"
        />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/ui_login_fullnameinput"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ui_login_fullnametitle"
        android:hint="Please enter your password"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        android:textStyle="italic"
        android:textSize="24sp"
        android:layout_marginTop="3dp"
        android:textAlignment="center"
        android:background="@drawable/ui_register_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Log me in!"
        android:id="@+id/ui_login_loginbutton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ui_login_fullnameinput"
        android:layout_marginTop="20dp"
        android:textSize="24sp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/ui_login_progressbar"
        android:visibility="gone"/>

</RelativeLayout>